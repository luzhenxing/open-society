@import 'mixin.styl';
body
  -webkit-font-smoothing: antialiased

textarea
  resize: none

a
a:hover
  text-decoration: none

dl
dt
dd
  margin: 0
  padding: 0
  font-weight: normal

.radio-inline
.checkbox-inline
  cursor: default

.navbar
  border: 0
  height: 50px
  line-height: 50px
  background-color: #565656
  border-radius: 0
  box-shadow: 0 0 1px rgba(0, 0, 0, .4)
  color: #fff
  overflow: hidden
  a
    color: #fff
    text-decoration: none
  .u-logo-wrapper
    font-size: 20px
    img
      vertical-align: middle
      width: 44px
      height: 44px
  .u-user
    img
      margin-right: 5px
      vertical-align: middle
      width: 30px
      height: 30px
    span
      vertical-align: middle

.main
  padding: 30px 0

.u-panel-style
  border: 1px solid #E9E9E9
  box-shadow: 0 4px 8px rgba(0, 0, 0, .05)
  .panel-body
    padding: 25px

.u-create-project-form
  .control-label
    color: #777
    font-weight: normal

  .u-select-control
    padding-bottom: 10px
    &:last-child
      padding-bottom: 0
  .has-error
    .help-block
      display: block
  .help-block
    display: none
    white-space: nowrap
  .u-form-divider
    margin-top: 10px
  select.form-control
    min-width: 60px

  .radio
  .radio-inline
    label
      font-weight: normal
  .radio-inline
    & + .radio-inline
      margin-left: 30px
  .u-from-radio
    .radio-inline
      margin-left: 30px
      padding-top: 3px

    .u-radio-select
      margin: 0
      padding-right: 0
      padding-left: 10px

  @media (min-width: 768px)
    .u-select-control
      padding: 0 4px
      &:first-child
        padding-left: 15px
      &:last-child
        padding-right: 15px

/*.radio-inline
  &:nth-child(2)
    margin-left: 40px*/

.u-radio-layer
  position: relative
  .u-layer
    display: none
    position: absolute
    z-index: 1
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: #fff
    opacity: .8
  &.layer
    .u-layer
      display: block

.u-btn-group
  text-align: center
  font-size: 0
  .btn
    margin: 0 10px
    width: 134px
    height: 40px

.item-pager .form-inline
  margin-top: 20px
  line-height: 34px
  text-align: center

  .pager-text
    font-size: 12px
    color: #999
    vertical-align: top
    &:last-child
      margin-left: 30px
  .pagination
    margin: 0 4px
    vertical-align: top
    .glyphicon
      font-size: 12px
    li
      a
      span
        color: #666
    .active
      a
      span
        border-color: #ddd
        background: #fff
        color: #21BD6D
    .disabled
      a
      span
        color: #999
  .form-control
    width: 48px
    padding: 6px 1px
    text-align: center
    vertical-align: top
  .btn
    width: 48px
    height: 34px
    font-size: 12px
    vertical-align: top
