@import 'mixin.styl';
body
  -webkit-font-smoothing: antialiased

textarea
  resize: none

a
a:hover
a:active
a:focus
  text-decoration: none

dl
dt
dd
  margin: 0
  padding: 0
  font-weight: normal

td
  border: 1px solid #d8d8d8

.radio-inline
.checkbox-inline
  cursor: default

.create-container
  margin: 0 auto
  width: 1000px

.upload-tips-layer
  position: fixed
  z-index: 1500
  top: 0
  left: 50%
  margin-left: -200px
  padding: 10px 50px
  box-sizing: border-box
  width: 400px
  //height: 80px
  background: #fff
  font-size: 14px
  text-align: center
  box-shadow: 0 4px 8px rgba(0,0,0,.05)
  .percent
    display: block
    margin-top: 8px
    height: 6px
    background: #D8D8D8
    em
      display: block
      width: 0
      height: 100%
      background: #20BE6D
  .file
    display: block
    margin-top: 6px
    font-size: 12px

.navbar
  min-width: 1100px
  border: 0
  height: 50px
  line-height: 50px
  background-color: #565656
  border-radius: 0
  box-shadow: 0 0 1px rgba(0, 0, 0, .4)
  color: #fff
  overflow: hidden
  a
    color: #fff
  .u-logo-wrapper
    font-size: 20px
    img
      vertical-align: middle
      width: 44px
      height: 44px
  .u-user
    img
      margin-right: 5px
      vertical-align: middle
      width: 30px
      height: 30px
    span
      vertical-align: middle

.main
  padding: 30px 0

.u-panel-style
  border: 1px solid #E9E9E9
  box-shadow: 0 4px 8px rgba(0, 0, 0, .05)
  .panel-body
    padding: 25px

.u-create-project-form
  .control-label
    color: #777
    font-weight: normal
    white-space: nowrap

  .u-select-control
    padding-bottom: 10px
    &:last-child
      padding-bottom: 0
  .has-error
    .help-block
      display: block
  .help-block
    display: none
    white-space: nowrap
  .u-form-divider
    margin-top: 10px
  select.form-control
    min-width: 60px

  .radio
  .radio-inline
    label
      font-weight: normal
  .radio-inline
    & + .radio-inline
      margin-left: 30px
  .u-from-radio
    .radio-inline
      margin-left: 30px
      padding-top: 3px

    .u-radio-select
      margin: 0
      padding-right: 0
      padding-left: 10px

  @media (min-width: 768px)
    .u-select-control
      padding: 0 4px
      &:first-child
        padding-left: 15px
      &:last-child
        padding-right: 15px

/*.radio-inline
  &:nth-child(2)
    margin-left: 40px*/

.u-radio-layer
  position: relative
  .u-layer
    display: none
    position: absolute
    z-index: 1
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: #fff
    opacity: .8
  &.layer
    .u-layer
      display: block

.u-btn-group
  text-align: center
  font-size: 0
  .btn
    margin: 0 10px
    width: 134px
    height: 40px

.item-pager
  background: #fff
  .form-inline
    padding: 10px 0
    line-height: 34px
    text-align: center

    .form-control
      display: inline-block
    .pager-text
      font-size: 12px
      color: #999
      vertical-align: top
      &:last-child
        margin-left: 30px
    .pagination
      margin: 0 4px
      vertical-align: top
      .glyphicon
        font-size: 12px
      li
        a
        span
          color: #666
      .active
        a
        span
          border-color: #ddd
          background: #fff
          color: #21BD6D
      .disabled
        a
        span
          color: #999
  .form-control
    width: 48px
    padding: 6px 1px
    text-align: center
    vertical-align: top
  .btn
    width: 48px
    height: 34px
    font-size: 12px
    vertical-align: top
